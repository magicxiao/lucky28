# lib模块
path   = require 'path'
mkdirp = require 'mkdirp'

resultDir = (dirname) ->
  dir = path.join __dirname, "../../results/#{dirname}"
  try
    mkdirp.sync dir
    dir 
  catch error
    console.log error
    no

taskFilePath = (task) ->
  dir = resultDir 'task'
  path.join dir, "task_#{task.name}_#{task.id}.log"

module.exports = { resultDir, taskFilePath }